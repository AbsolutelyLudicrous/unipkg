install.handler.sh	-	install a package
remove.handler.sh	-	remove a package
repo.handler.sh		-	perform repository operations
	repo add	-	add a repository
	repo disable	-	disable a repository
	repo enable	-	enable a repository
	repo list	-	list repositorys
	repo rebuild	-	rebuild repository databases
	repo remove	-	remove a repository
	repo update	-	update the repository database
search.handler.sh	-	search for a package
reinstall.handler.sh	-	force-reinstall a package
upgrade.handler.sh	-	perform a full system upgrade
history.handler.sh	-	show package management history in less
list.handler.sh		-	perform list operations
	list itable	-	list installable in pager
	list ited	-	list installed in pager
	list new	-	list new packages in pager
	list upable	-	list upgradeable in pager
